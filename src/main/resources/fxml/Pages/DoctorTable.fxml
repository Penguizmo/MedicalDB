<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.medicaldb.controller.DoctorController"
            prefHeight="600.0" prefWidth="800.0">
    <VBox spacing="20.0" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <HBox spacing="10.0" alignment="CENTER">
            <Label text="Search Doctor by ID:"/>
            <TextField fx:id="doctorSearchField"/>
            <Button text="Search" onAction="#onSearchDoctor"/>
        </HBox>
        <TableView fx:id="doctorTableView" prefHeight="400.0" prefWidth="760.0">
            <columns>
                <TableColumn text="ID" fx:id="doctorIdColumn"/>
                <TableColumn text="First Name" fx:id="doctorFirstNameColumn"/>
                <TableColumn text="Surname" fx:id="doctorSurnameColumn"/>
                <TableColumn text="Address" fx:id="doctorAddressColumn"/>
                <TableColumn text="Email" fx:id="doctorEmailColumn"/>
                <TableColumn text="Hospital" fx:id="doctorHospitalColumn"/>
                <TableColumn text="Specialization" fx:id="doctorSpecializationColumn"/>
                <TableColumn text="Experience" fx:id="doctorExperienceColumn"/>
            </columns>
        </TableView>
        <HBox spacing="20.0" alignment="CENTER">
            <VBox spacing="10.0" alignment="CENTER">
                <TextField fx:id="doctorIdField" promptText="Doctor ID"/>
                <TextField fx:id="doctorFirstNameField" promptText="First Name"/>
                <TextField fx:id="doctorSurnameField" promptText="Surname"/>
                <TextField fx:id="doctorAddressField" promptText="Address"/>
                <TextField fx:id="doctorEmailField" promptText="Email"/>
                <TextField fx:id="doctorHospitalField" promptText="Hospital"/>
                <CheckBox fx:id="specialistCheckBox" text="Specialist" onAction="#onSpecialistCheckBox"/>
                <TextField fx:id="doctorSpecializationField" promptText="Specialization" visible="false"/>
                <TextField fx:id="doctorExperienceField" promptText="Experience" visible="false"/>
            </VBox>
            <VBox spacing="10.0" alignment="CENTER">
                <Button text="Add Doctor" onAction="#onSaveDoctor"/>
                <Button text="Update Doctor" onAction="#onUpdateDoctor"/>
                <Button text="Delete Doctor" onAction="#onDeleteDoctor"/>
            </VBox>
        </HBox>
        <HBox spacing="10.0" alignment="CENTER">
            <Button text="Main Page" onAction="#handleMainPage"/>
            <Button text="Drugs" onAction="#handleDrugs"/>
            <Button text="Insurance Companies" onAction="#handleInsuranceCompanies"/>
            <Button text="Patients" onAction="#handlePatients"/>
            <Button text="Prescriptions" onAction="#handlePrescriptions"/>
            <Button text="Visits" onAction="#handleVisits"/>
        </HBox>
    </VBox>
</AnchorPane>