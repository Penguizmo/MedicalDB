<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medicaldb.controller.DoctorController">
    <TextField fx:id="searchField" layoutX="14.0" layoutY="14.0" prefWidth="572.0" promptText="Search..." />
    <TableView fx:id="doctorTable" layoutX="14.0" layoutY="44.0" prefHeight="200.0" prefWidth="572.0">
        <columns>
            <TableColumn fx:id="doctorIdColumn" text="Doctor ID">
                <cellValueFactory>
                    <PropertyValueFactory property="doctorId" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="firstNameColumn" text="First Name">
                <cellValueFactory>
                    <PropertyValueFactory property="firstName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="surnameColumn" text="Surname">
                <cellValueFactory>
                    <PropertyValueFactory property="surname" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="addressColumn" text="Address">
                <cellValueFactory>
                    <PropertyValueFactory property="address" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="emailColumn" text="Email">
                <cellValueFactory>
                    <PropertyValueFactory property="email" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="hospitalColumn" text="Hospital">
                <cellValueFactory>
                    <PropertyValueFactory property="hospital" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="specializationColumn" text="Specialization">
                <cellValueFactory>
                    <PropertyValueFactory property="specialization" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="experienceColumn" text="Experience">
                <cellValueFactory>
                    <PropertyValueFactory property="experience" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <Button fx:id="addDoctorButton" layoutX="14.0" layoutY="260.0" onAction="#handleAddDoctor" text="Add Doctor" />
    <Button fx:id="editDoctorButton" layoutX="100.0" layoutY="260.0" onAction="#handleEditDoctor" text="Edit Doctor" />
    <Button fx:id="deleteDoctorButton" layoutX="186.0" layoutY="260.0" onAction="#handleDeleteDoctor" text="Delete Doctor" />
    <Button fx:id="backButton" layoutX="286.0" layoutY="260.0" onAction="#handleBack" text="Back" />
</AnchorPane>
